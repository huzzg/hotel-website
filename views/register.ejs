<%- include('partials/header', { title: 'Đăng ký' }) %>

<section class="auth-bg">
  <div class="auth-card">
    <h2 class="auth-title mb-1">Tạo tài khoản mới</h2>
    <p class="auth-sub mb-4">Chỉ mất 1 phút để bắt đầu đặt phòng</p>

    <% if (typeof error !== 'undefined' && error) { %>
      <div class="alert alert-danger py-2 px-3 mb-3"><%= error %></div>
    <% } %>

    <form action="/auth/register" method="POST" class="d-grid gap-3">
      <div>
        <label class="form-label">Họ và tên</label>
        <input type="text" name="name" class="form-control" placeholder="Nguyễn Văn A" required />
      </div>

      <div>
        <label class="form-label">Email</label>
        <input type="email" name="email" class="form-control" placeholder="you@example.com" required />
      </div>

      <div>
        <label class="form-label">Số điện thoại</label>
        <input type="tel" name="phone" class="form-control" placeholder="09xx xxx xxx" />
      </div>

      <div>
        <label class="form-label">Mật khẩu</label>
        <input type="password" name="password" class="form-control" placeholder="Ít nhất 6 ký tự" required />
      </div>

      <button class="btn btn-brand mt-2">Tạo tài khoản</button>
    </form>

    <div class="text-center mt-3">
      <a href="/auth/login" class="text-decoration-none">Đã có tài khoản? Đăng nhập</a>
    </div>
  </div>
</section>

<%- include('partials/footer') %>
