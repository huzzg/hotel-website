<%- include('partials/header', { title: 'Đăng nhập' }) %>

<section class="auth-bg">
  <div class="auth-card">
    <h2 class="auth-title mb-1">Đăng nhập tài khoản</h2>
    <p class="auth-sub mb-4">Hệ thống quản lý khách sạn Phenikaa</p>

    <% if (typeof error !== 'undefined' && error) { %>
      <div class="alert alert-danger py-2 px-3 mb-3"><%= error %></div>
    <% } %>

    <form action="/auth/login" method="POST" class="d-grid gap-3">
      <div>
        <label class="form-label">Email hoặc Tên đăng nhập</label>
        <input type="text" name="email" class="form-control"
               placeholder="Nhập email hoặc tên đăng nhập"
               value="<%= typeof email !== 'undefined' ? email : '' %>" required />
      </div>

      <div>
        <label class="form-label">Mật khẩu</label>
        <input type="password" name="password" class="form-control" placeholder="Nhập mật khẩu" required />
      </div>

      <button class="btn btn-brand mt-2">Đăng nhập ngay</button>
    </form>

    <div class="text-center mt-3">
      <a href="/auth/register" class="text-decoration-none">Chưa có tài khoản? Đăng ký ngay</a>
    </div>
  </div>
</section>

<%- include('partials/footer') %>
