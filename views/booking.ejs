<%- include('partials/header') %>
<style>
  .booking-container { max-width: 600px; margin: 50px auto; }
  .booking-form { background: white; padding: 30px; border-radius: 15px; box-shadow: 0 4px 20px rgba(0,0,0,0.1); animation: slideUp 1s ease-out; }
  @keyframes slideUp { from { transform: translateY(50px); opacity: 0; } to { transform: translateY(0); opacity: 1; } }
</style>
<div class="booking-container">
  <h2 class="text-center mb-4">Đặt Phòng</h2>
  <div class="booking-form">
    <form action="/user/book" method="POST">
      <div class="mb-3">
        <label for="roomId" class="form-label">Phòng</label>
        <select name="roomId" id="roomId" class="form-select form-select-lg" required>
          <% rooms.forEach(room => { %>
            <option value="<%= room._id %>"><%= room.type %> - <%= room.roomNumber %> (<%= room.location %>)</option>
          <% }) %>
        </select>
      </div>
      <div class="mb-3">
        <label for="checkIn" class="form-label">Ngày Nhận Phòng</label>
        <input type="date" name="checkIn" id="checkIn" class="form-control form-control-lg" required>
      </div>
      <div class="mb-3">
        <label for="checkOut" class="form-label">Ngày Trả Phòng</label>
        <input type="date" name="checkOut" id="checkOut" class="form-control form-control-lg" required>
      </div>
      <button type="submit" class="btn btn-hotel w-100">Đặt Ngay</button>
    </form>
  </div>
</div>
<%- include('partials/footer') %>